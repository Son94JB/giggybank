<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.signUp.SingUpFragment">

    <ImageView
        android:id="@+id/fragment_sing_up_close_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close_black_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
   <TextView
       android:layout_marginTop="40dp"
       android:layout_marginStart="16dp"
       android:id="@+id/fragment_sign_up_text_view"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="회원가입(1/2)"
       android:textSize="36sp"
       android:textColor="@color/main"
       android:fontFamily="@font/the_jamsil_4_medium"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       />
   <TextView
       android:layout_marginTop="12dp"
       android:id="@+id/fragment_sing_up_sub_text_view"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:fontFamily="@font/the_jamsil_2_light"
       android:text="회원 가입을 위해 정보를 입력하세요"
       app:layout_constraintTop_toBottomOf="@+id/fragment_sign_up_text_view"
       app:layout_constraintStart_toStartOf="@+id/fragment_sign_up_text_view"
       />

   <TextView
       android:layout_marginTop="30dp"
       android:id="@+id/fragment_sign_up_name_text_view"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:fontFamily="@font/the_jamsil_2_light"
       android:textSize="16dp"
       android:textColor="@color/main"
       android:text="이름"
       app:layout_constraintStart_toStartOf="@+id/fragment_sing_up_sub_text_view"
       app:layout_constraintTop_toBottomOf="@+id/fragment_sing_up_sub_text_view"
       />

   <com.google.android.material.textfield.TextInputEditText
       android:layout_marginStart="16dp"
       android:layout_marginTop="16dp"
       android:padding="16dp"
       android:id="@+id/fragment_sing_up_name_edit_text"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="김싸피"
       android:background="@drawable/edit_text_rectangle"
       app:layout_constraintStart_toStartOf="@+id/fragment_sign_up_name_text_view"
       app:layout_constraintTop_toBottomOf="@+id/fragment_sign_up_name_text_view"
       />

   <TextView
       android:layout_marginTop="20dp"
       android:id="@+id/fragment_sign_up_phone_text_view"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:fontFamily="@font/the_jamsil_2_light"
       android:textSize="16dp"
       android:textColor="@color/main"
       android:text="전화번호"
       app:layout_constraintStart_toStartOf="@+id/fragment_sign_up_name_text_view"
       app:layout_constraintTop_toBottomOf="@+id/fragment_sing_up_name_edit_text"
       />

   <com.google.android.material.textfield.TextInputEditText
       android:layout_marginStart="16dp"
       android:layout_marginTop="16dp"
       android:id="@+id/fragment_sing_up_phone_edit_text"
       android:padding="16dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="+ 10 1234 5678"
       android:inputType="phone"
       android:background="@drawable/edit_text_rectangle"
       app:layout_constraintStart_toStartOf="@+id/fragment_sign_up_name_text_view"
       app:layout_constraintTop_toBottomOf="@+id/fragment_sign_up_phone_text_view"
       />

   <TextView
       android:layout_marginTop="20dp"
       android:id="@+id/fragment_sign_up_password_text_view"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:fontFamily="@font/the_jamsil_2_light"
       android:textSize="16dp"
       android:textColor="@color/main"
       android:text="비밀번호"
       app:layout_constraintStart_toStartOf="@+id/fragment_sign_up_name_text_view"
       app:layout_constraintTop_toBottomOf="@+id/fragment_sing_up_phone_edit_text"
       />

   <com.google.android.material.textfield.TextInputEditText
       android:layout_marginStart="16dp"
       android:layout_marginTop="16dp"
       android:id="@+id/fragment_sing_up_password_edit_text"
       android:padding="16dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="최소 8자리 이상 입력해주세요"
       android:inputType="textPassword"
       android:background="@drawable/edit_text_rectangle"
       app:layout_constraintStart_toStartOf="@+id/fragment_sign_up_name_text_view"
       app:layout_constraintTop_toBottomOf="@+id/fragment_sign_up_password_text_view"
       />

   <TextView
       android:layout_marginTop="20dp"
       android:id="@+id/fragment_sign_up_password_check_text_view"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:fontFamily="@font/the_jamsil_2_light"
       android:textSize="16dp"
       android:textColor="@color/main"
       android:text="비밀번호 확인"
       app:layout_constraintStart_toStartOf="@+id/fragment_sign_up_name_text_view"
       app:layout_constraintTop_toBottomOf="@+id/fragment_sing_up_password_edit_text"
       />

   <com.google.android.material.textfield.TextInputEditText
       android:layout_marginStart="16dp"
       android:layout_marginTop="16dp"
       android:id="@+id/fragment_sing_up_password_check_edit_text"
       android:padding="16dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="최소 8자리 이상 입력해주세요"
       android:inputType="textPassword"
       android:background="@drawable/edit_text_rectangle"
       app:layout_constraintStart_toStartOf="@+id/fragment_sign_up_name_text_view"
       app:layout_constraintTop_toBottomOf="@+id/fragment_sign_up_password_check_text_view"
       />

  <ImageView
      android:layout_marginBottom="48dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/box_1_2"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      />
   <ImageView
       android:layout_marginBottom="32dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       android:src="@drawable/next_cheeze_button"
       />

   <LinearLayout
       android:id="@+id/fragment_sing_up_back_layout"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/the_jamsil_2_light"
          android:textSize="16dp"
          android:text="이미 등록된 회원이신가요?"
          />

      <TextView
          android:id="@+id/fragment_sign_up_back_login_text_view"
          android:layout_marginStart="4dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/the_jamsil_2_light"
          android:text="여기를 클릭하세요"
          android:textSize="16dp"
          android:textColor="@color/main" />


   </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>